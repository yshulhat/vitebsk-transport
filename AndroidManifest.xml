<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spax.vitebsktransport"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.spax.vitebsktransport.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spax.vitebsktransport.TransportNumberList"
            android:label="@string/title_activity_bus_number_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="by.sands.vitebsktransport.Main" />
        </activity>
        <activity
            android:name="com.spax.vitebsktransport.DirectionsList"
            android:label="@string/title_activity_directions_list" >
        </activity>
        <activity
            android:name="com.spax.vitebsktransport.DeparturesList"
            android:label="@string/title_activity_departures_list" >
        </activity>
        <activity
            android:name="com.spax.vitebsktransport.StopsList"
            android:label="@string/title_activity_stops_list" >
        </activity>
        <activity
            android:name="com.spax.vitebsktransport.DaysList"
            android:label="@string/title_activity_days_list" >
        </activity>
        <activity
            android:name="com.spax.vitebsktransport.Map"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="com.spax.vitebsktransport.MapTest"
            android:label="@string/title_activity_map_test" >
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDMT5-O5mi8b4QPMUtz9agnawc5F9jXidQ" />
    </application>

</manifest>