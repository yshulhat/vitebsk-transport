<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#15212F"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#1C242F"
                android:startColor="#363242">
            </gradient>
            <stroke android:width="1dp" android:color="#50555555" android:dashGap="10dp" />
            <corners android:radius="10dp" />
            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#eee"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#ededed"
                android:startColor="#efefef">
            </gradient>
            <stroke android:width="1dp" android:color="#ccc" android:dashGap="10dp" />
            <corners android:radius="10dp" />
            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
        </shape>
    </item>


</selector>