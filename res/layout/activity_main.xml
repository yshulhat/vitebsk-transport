<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main" >

    <Button
        android:id="@+id/city_routes"
        android:background="@drawable/back_btn_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Городские автобусы" />

    <Button
        android:id="@+id/stop_search_btn"
        android:background="@drawable/back_btn_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_routes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Остановки" />

    <Button
        android:id="@+id/btn_test"
        android:background="@drawable/back_btn_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_search_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Expandable test"
        android:visibility="invisible" />

    <Button
        android:id="@+id/map_btn"
        android:background="@drawable/back_btn_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_search_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Карта" />

</RelativeLayout>